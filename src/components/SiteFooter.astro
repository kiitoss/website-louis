---
const MAIL = "louis.chataignier@math.univ-toulouse.fr"
const PHONE = "+33 6 22 65 15 78"
const YEAR = new Date().getFullYear()
const base = import.meta.env.BASE_URL
---

<footer class="border-t border-border">
  <div class="mx-auto flex max-w-5xl flex-col items-center justify-between gap-6 px-6 py-8 text-center md:flex-row md:text-left">

    <!-- Left: name + contact -->
    <div class="flex flex-col items-center gap-2 md:items-start">
      <p class="font-medium text-foreground">Louis Chataignier</p>
      <div class="flex flex-col gap-1">
        <a
          href={`mailto:${MAIL}`}
          class="flex justify-center items-center gap-1.5 text-sm text-muted-foreground transition-colors hover:text-primary md:justify-start"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
          {MAIL}
        </a>
        <a
          href={`tel:${PHONE.replace(/\s+/g, "")}`}
          class="flex justify-center items-center gap-1.5 text-sm text-muted-foreground transition-colors hover:text-primary md:justify-start"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 4.69 13 19.79 19.79 0 0 1 1.61 4.44 2 2 0 0 1 3.6 2.22h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L7.91 9.91a16 16 0 0 0 6.18 6.18l1.27-.95a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
          {PHONE}
        </a>
      </div>
    </div>

    <!-- Right: logos + copyright -->
    <div class="flex flex-col items-center gap-3 md:items-end">
      <div class="flex items-center gap-5">
        <img
          src={`${base}images/institut-mathematiques.webp`}
          alt="Institut de Mathématiques de Toulouse"
          class="max-h-9 max-w-[30vw] object-contain"
        />
        <img
          src={`${base}images/universite-toulouse.webp`}
          alt="Université de Toulouse"
          class="max-h-9 max-w-[30vw] object-contain"
        />
        <img
          src={`${base}images/cnrs.webp`}
          alt="CNRS"
          class="max-h-9 max-w-[30vw] object-contain"
        />
      </div>
      <p class="text-xs text-muted-foreground">&copy; {YEAR} Louis Chataignier</p>
    </div>

  </div>
</footer>
