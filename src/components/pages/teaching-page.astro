---
import Layout from '@/layouts/main.astro'
import CourseList from '@/components/CourseList.astro'
import { Separator } from '@/components/ui/separator'
import { useTranslations, defaultLang } from '@/i18n'

const lang = Astro.currentLocale ?? defaultLang
const t = useTranslations(lang)
---

<Layout
  title={`${t.teaching.heading} | Louis Chataignier`}
  description={t.teaching.description}
>
  <div class="mx-auto max-w-3xl px-6 py-4">
    <header class="flex flex-col gap-3">
      <h1 class="text-3xl font-semibold tracking-tight text-foreground md:text-4xl">
        {t.teaching.heading}
      </h1>
    </header>

    <Separator className="my-4" />

    <CourseList roleLabels={t.teaching.roles} lang={lang} />
  </div>
</Layout>
